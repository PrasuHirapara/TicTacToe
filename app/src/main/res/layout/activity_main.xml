<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C0C0C"
        tools:context=".MainActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/laView"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_alignBottom="@+id/button1vComp_intermediate"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="437dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/welcome"
            app:lottie_speed="1" />

        <Button
            android:id="@+id/button1v1"
            android:layout_width="254dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="173dp"
            android:layout_marginEnd="74dp"
            android:layout_marginRight="74dp"
            android:backgroundTint="@color/purple_200"
            android:text="@string/press_to_play_1v1"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1vComp"
            android:layout_width="340dp"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:backgroundTint="@color/purple_200"
            android:text="Press to play with Computer. (Begginer Level)"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1vComp_intermediate"
            android:layout_width="336dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="447dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="36dp"
            android:backgroundTint="@color/purple_200"
            android:text="Press to play with Computer. (Intermediate Level)"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>