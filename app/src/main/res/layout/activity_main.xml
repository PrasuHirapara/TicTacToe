<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".MainActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/laView"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="437dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/welcome"
            app:lottie_speed="1" />

        <Button
            android:id="@+id/button1v1"
            android:layout_width="182dp"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="322dp"
            android:layout_marginEnd="207dp"
            android:layout_marginRight="207dp"
            android:backgroundTint="@color/purple_200"
            android:text="Play 1v1"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_online"
            android:layout_width="182dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="322dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="@color/purple_200"
            android:text="Play Online"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1vComp"
            android:layout_width="182dp"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="426dp"
            android:layout_marginEnd="207dp"
            android:layout_marginRight="207dp"
            android:backgroundTint="@color/purple_200"
            android:text="Bot (Easy)"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1vComp_hard"
            android:layout_width="182dp"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="218dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="36dp"
            android:backgroundTint="@color/purple_200"
            android:text="Bot (Hard)"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>